# =============================
# Production (HTTPS + domain)
# =============================
NODE_ENV=production
PORT=3000

# Web
APP_URL=https://app.example.com
CORS_ORIGIN=https://app.example.com

# Database (example)
MONGO_URI=mongodb://USER:PASSWORD@db.example.com:27017/curve-comfort?authSource=admin

# Redis
REDIS_URL=redis://:PASSWORD@redis.example.com:6379

# RabbitMQ
RABBITMQ_URL=amqp://USER:PASSWORD@rabbitmq.example.com:5672
MAIL_QUEUE=mail_queue

# JWT (use strong secrets)
JWT_ACCESS_SECRET=replace_with_strong_random_secret
JWT_REFRESH_SECRET=replace_with_strong_random_secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Cookies (production)
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
# Set this only if you want cookies shared across subdomains:
# COOKIE_DOMAIN=.example.com

# SMTP (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password
MAIL_FROM=noreply@example.com